
@{
    ViewBag.Title = "Index";
}

<h2>First Query</h2>
<br>

<form class="form-horizontal">
    <div class="form-group">
        <label>Insert number X</label>
        <input type="number" min=0 class="form-control" id="numberx" name="numberx" placeholder="Type Number X">
    </div>
    <div class="form-group">
        <label>From Date</label>
        <input type="date" class="form-control" id="dateFrom" name="dateFrom" placeholder="">
    </div>
    <div class="form-group">
        <label>To Date</label>
        <input type="date" class="form-control" id="dateTo" name="dateTo" placeholder="">
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success">Search</button>
    </div>
</form>

<table class="table">
    <tr>
        <th>
            Total book sales
        </th>
        <th>
            Author's id
        </th>
        <th>
            Author's first name
        </th>
        <th>
            Author's last name
        </th>
        <th>
            Author's phone
        </th>
        <th>
            Author's address
        </th>
        <th>
            Author's city
        </th>
        <th>
            Author's state
        </th>
        <th>
            Author's zip
        </th>
        <th>
            Author's contract
        </th>
    </tr>

    @foreach (var item in ViewData["jointables"] as IEnumerable<WebApplicationMVC_2021.Models.FirstQueryClass>)
    {
        <tr>
            <td>
                @item.Amount
            </td>
            <td>
                @item.authorslist.au_id
            </td>
            <td>
                @item.authorslist.au_fname
            </td>
            <td>
                @item.authorslist.au_lname
            </td>
            <td>
                @item.authorslist.phone
            </td>
            <td>
                @item.authorslist.address
            </td>
            <td>
                @item.authorslist.city
            </td>
            <td>
                @item.authorslist.state
            </td>
            <td>
                @item.authorslist.zip
            </td>
            <td>
                @item.authorslist.contract
            </td>
        </tr>
    }

</table>
