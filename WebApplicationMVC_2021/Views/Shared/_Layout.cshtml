<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Book-it.gr</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Book-it.gr", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" style="font-size:20px;">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Company<span class="caret"></span></a>
                        <div class="dropdown-menu" style="background-color:#00BC8C; text-align:center; font-size: 18px;">
                            <a class="dropdown-item" href="#">@Html.ActionLink("Stores", "GoToStores", "Stores", new { @class = "my-dropdown-object" })</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">@Html.ActionLink("Employees", "GoToEmployees", "Employees", new { @class = "my-dropdown-object" })</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">@Html.ActionLink("Jobs", "GoToJobs", "Jobs", new { @class = "my-dropdown-object" })</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Publishers<span class="caret"></span></a>
                        <div class="dropdown-menu" style="background-color:#00BC8C; text-align:center; font-size: 18px;">
                            <a class="dropdown-item" href="#">@Html.ActionLink("Publishers", "GoToPublishers", "Publishers", new { @class = "my-dropdown-object" })</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">@Html.ActionLink("Publishers' info", "GoToPublishersInfo", "Pub_info", new { @class = "my-dropdown-object" })</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Books<span class="caret"></span></a>
                        <div class="dropdown-menu" style="background-color:#00BC8C; text-align:center; font-size: 18px;">
                            <a class="dropdown-item" href="#">@Html.ActionLink("Book titles", "GoToTitles", "Titles", new { @class = "my-dropdown-object" })</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">@Html.ActionLink("Authors", "GoToAuthors", "Authors", new { @class = "my-dropdown-object" })</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">@Html.ActionLink("Title-Authors", "GoToTitleAuthors", "TitleAuthors", new { @class = "my-dropdown-object" })</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Other<span class="caret"></span></a>
                        <div class="dropdown-menu" style="background-color:#00BC8C; text-align:center; font-size: 18px;">
                            <a class="dropdown-item" href="#">@Html.ActionLink("Book sales", "GoToSales", "Sales", new { @class = "my-dropdown-object" })</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">@Html.ActionLink("Discounts", "GoToDiscounts", "Discounts", new { @class = "my-dropdown-object" })</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">@Html.ActionLink("Price Royalties", "GoToRoyscheds", "Royscheds", new { @class = "my-dropdown-object" })</a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
